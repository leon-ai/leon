{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/bin",
    "rootDir": "../../",
    "baseUrl": ".",
    "paths": {
      "@@/*": ["../../*"],
      "@/*": ["../../server/src/*"],
      "@server/*": ["../../server/src/*"],
      "@bridge/*": ["./src/*"],
      "@sdk/*": ["./src/sdk/*"]
    },
    "exactOptionalPropertyTypes": false,
    "declaration": true,
    "target": "es2015",
    "moduleResolution": "node"
  },
  "ts-node": {
    "swc": true,
    "require": ["tsconfig-paths/register"],
    "files": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
